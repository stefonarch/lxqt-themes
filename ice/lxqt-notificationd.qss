/*
 * Popup
 */
Notification {
   background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
   stop: 0 #d0e6ec, stop: 1 #75979e);
   border-radius:4px;
   padding: 1px;
   margin: 2px;
}
/*message*/
QLabel {
   color:#323d42;
}
/*title*/
#appLabel {
   color:#54646d;
}
QToolButton {
   border:1px solid #4a5961;
   padding:4px;
   border-radius:5px;
}
QToolButton:hover {
   border:1px solid #4a5961;
   padding: 4px;
   background:#768e9a;
   border-radius:5px;
}

QToolButton:pressed {
   background:#657a84;
   border-radius:5px;
}

#closeButton {
   qproperty-icon: url(lxqt-runner/close.svg);
   qproperty-iconSize: 18px;
}
